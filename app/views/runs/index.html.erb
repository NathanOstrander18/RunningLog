<div style="padding-top: 75px;" class="container">
	<h1>Runs</h1>

	<table>
	  <thead>
	    <tr>
	      <th>Distance</th>
	      <th>Unit</th>
	      <th>Time</th>
	      <th>User</th>
	      <th colspan="3"></th>
	    </tr>
	  </thead>

	  <tbody>
	    <% @runs.each do |run| %>
	      <tr>
	        <td><%= run.distance %></td>
	        <td><%= run.unit %></td>
	        <td><%= run.time %></td>
	        <td><%= run.user_id %></td>
	        <td><%= link_to 'Show', run %></td>
	        <td><%= link_to 'Edit', edit_run_path(run) %></td>
	        <td><%= link_to 'Destroy', run, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>

	<br>

	<%= link_to 'New Run', new_run_path %>
	</br></br>
	<%= link_to 'View Users', users_path %>
</div>

