<div class="container-login">
	<div class="wrap-login">
		<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
			<form class="login-form validate-form">
				<span class="login-form-title">
					Account Login
				</span>
				<div class="wrap-input validate-input" data-validate="Valid email is required: ex@abc.xyz">
					<%= f.email_field :email, autofocus: true, autocomplete: "email", class: "login-input", placeholder: "Email" %>
					<span class="focus-input-1"></span>
					<span class="focus-input-2"></span>
				</div>
				<div class="wrap-input rs1 validate-input" data-validate="Password is required">
					<%= f.password_field :password, autocomplete: "current-password", class: "login-input", placeholder: "Password" %>
					<span class="focus-input-1"></span>
					<span class="focus-input-2"></span>
				</div>
				<div class="container-login-form-btn">
					<%= f.button 'Log in', class: "login-form-btn" %>
				</div>
				<div class="text-center" style="padding-top: 18px;">
					<span class="txt1">Forgot </span>
					<%= link_to "Username / Password?", new_password_path(resource_name) %><br />
				</div>
				<div class="text-center">
					<span class="txt1">
					Create an account?
					</span>
					<%= link_to "Sign up", new_registration_path(resource_name) %><br />
				</div>
			</form>
		<% end %>
	</div>
</div>
